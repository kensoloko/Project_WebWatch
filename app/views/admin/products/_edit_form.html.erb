<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for [:admin, @product], html: {multipart: true}, remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, class: "control-label" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :quantity, class: "control-label" %>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :brand_id, class: "control-label" %>
          <%= f.select :brand_id, options_from_collection_for_select(@brands,
            "id", "name", {selected: @product.brand.id}), {}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :category_id, class: "control-label" %>
          <%= f.select :category_id,
            options_from_collection_for_select(@categories,"id", "name",
            {selected: @product.category.id}), {}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "control-label" %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="form-group" >
          <%= f.fields_for :product_images do |p| %>
          <div class="field">
            <%= p.label :image %><br>
            <%= p.file_field :image, multiple: true,
              name: "product[product_images_attributes][][image]", class: "upload-image" %>
          </div>
          <% end %>
          <div class= "form-control" >Image Upload PreView</div>
          <div id="preview"></div>
        </div>
      </div>

      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn btn-default", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
<script>
   $(".upload-image").on("change", function(){
    var preview = document.querySelector("#preview");
    var files   = document.querySelector("input[type=file]").files;

    function readAndPreview(file) {

      if ( /\.(jpe?g|png|gif)$/i.test(file.name) ) {
        var reader = new FileReader();

        reader.addEventListener("load", function () {
          var image = new Image();
          image.height = 100;
          image.width = 100;
          image.title = file.name;
          image.src = this.result;
          preview.appendChild( image );
        }, false);

        reader.readAsDataURL(file);
      }

    }

    if (files) {
      [].forEach.call(files, readAndPreview);
    }
  })
</script>
