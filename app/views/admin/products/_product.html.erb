<tr>
  <td><%= product.name %></td>
  <td><%= product.brand.name %></td>
  <td><%= product.category.name %></td>
  <td><%= product.price %></td>
  <td>
    <%= image_tag product.first_image, class: "image_size" %>
  </td>
  <td><%= product.quantity %></td>
  <td><%= product.description %></td>
  <td><%= product.content %></td>

  <td><%= link_to "Edit", edit_admin_product_path(product),
    remote: true, class: "btn btn-info" %></td>
  <td><%= link_to "Show", product, target: "_blank", class: "btn btn-info" %></td>
</tr>
