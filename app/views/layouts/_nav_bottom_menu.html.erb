<div class="header-bottom">
    <div class="container">
      <div class="header">
        <div class="col-md-9 header-left">
        <div class="top-nav">
          <ul class="memenu skyblue">
            <li class="active"><%= link_to t(".Home"), root_url %></li>
            <li class="grid"><%= link_to t(".new"), new_url %></li>
            <li class="grid"><%= link_to t(".hot"), hot_url %></li>
            <li class="grid"><%= link_to t(".sale"), "#" %></li>
            <li class="grid"><%= link_to t(".contact"), contact_url %></li>
          </ul>
        </div>
        <div class="clearfix"> </div>
      </div>
      <div class="col-md-3 header-right">
        <div class="search-bar">
          <%= form_tag search_path, method: :get,
            class: "navbar-form search-form", id: "livesearch_form" do %>
            <div class="form-group dropdown">
              <%= text_field_tag :search, params[:search],
                class: "form-control dropdown-toggle",
                placeholder: t(".Search"), "aria-hidden": :true,
                autocomplete: :off, required: true, id: "livesearch_input" %>
            </div>
            <%= button_tag type: :submit, class: "btn btn-default" do %>
              <i class="fa fa-search"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="clearfix"> </div>
      </div>
    </div>
  </div>
