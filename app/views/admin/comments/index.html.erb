<% provide :title, t("admin.comments.headline") %>
<% provide :page_headline, t("admin.comments.headline") %>
<div class="page-title">
  <div class="title_left">
    <h3>
      <%= yield :page_headline %>
    </h3>
  </div>
  <div class="title_right">
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col_-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table id="tblBrands" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th><%= t "admin.id" %></th>
                <th class = "hidden"></th>
                <th><%= t "admin.products.name" %></th>
                <th class = "hidden"></th>
                <th><%= t "admin.users.name" %></th>
                <th><%= t "admin.products.content" %></th>
                <th></th>
              </tr>
            </thead>
            <tbody id="brands" class="product-index">
              <%= render "index" %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>
  <script>
    var table = $("#tblBrands").dataTable();
  </script>
