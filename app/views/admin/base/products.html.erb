<% provide :title, t("admin.products.headline") %>
<% provide :page_headline, t("admin.products.headline") %>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table id="tblproducts" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th><%= t "admin.id" %></th>
                <th><%= t "admin.products.pName" %></th>
                <th><%= t "admin.products.pPrice" %></th>
                <th><%= t "admin.products.pQuantity" %></th>
                <th><%= t "admin.products.descript" %></th>
                <th><%= t "admin.products.brand" %></th>
                <th><%= t "admin.products.category" %></th>
              </tr>
            </thead>
            <tbody>
               <% @products.each do |product| %>
                <tr>
                  <td><%= product.id %></td>
                  <td><%= product.name %></td>
                  <td><%= product.price %></td>
                  <td><%= product.quantity %></td>
                  <td><%= product.description %></td>
                  <td><%= fetch_brand_name(product.Brand_id) %></td>
                  <td><%= fetch_category_name(product.Category_id) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $("#tblproducts").dataTable();
</script>
