$("ul.errors").html("")
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".product-index").html("<%= j render "admin/comments/index" %>")
  $("#product-modal").modal("hide")
<% end %>
