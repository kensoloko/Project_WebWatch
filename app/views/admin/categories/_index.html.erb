<% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= category.description %></td>
    <td><%= link_to "Edit", edit_admin_category_path(category),
      remote: true, class: "btn btn-info" %></td>
    <td><%= link_to "Delete", admin_category_remove_path(category),
      remote: true, class: "btn btn-danger" %></td>
  </tr>
<% end %>
