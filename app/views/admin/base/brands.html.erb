<% provide :title, t("admin.brands.headline") %>
<% provide :page_headline, t("admin.brands.headline") %>
<div class="page-title">
  <div class="title_left">
    <h3>
      <%= yield :page_headline %> &nbsp
      <%= link_to "Create" , new_brand_path, remote: true,
        class: "btn btn-primary" %>

    </h3>
  </div>
  <div class="title_right">
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table id="tblUsers" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th><%= t "admin.id" %></th>
                <th><%= t "admin.brands.name" %></th>
                <th><%= t "admin.brands.descript" %></th>
              </tr>
            </thead>
            <tbody id= "brands">
               <% @brands.each do |brand| %>
                <tr>
                  <td><%= brand.id %></td>
                  <td><%= brand.name %></td>
                  <td><%= brand.description %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $("#tblUsers").dataTable();
</script>
