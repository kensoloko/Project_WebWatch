<% provide :title, t("admin.bills.headline") %>
<% provide :page_headline, t("admin.bills.headline") %>
<div class="page-title">
  <div class="title_left">
    <h3>
      <%= yield :page_headline %>
    </h3>
  </div>
  <div class="title_right">
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col_-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table id="tblBills"
          class="table table-striped table-bordered dt-responsive nowrap"
          cellspacing="0" width="100%">
          <thead>
            <tr>
              <th><%= t "admin.id" %></th>
              <th><%= t "admin.bills.user_name" %></th>
              <th><%= t "admin.bills.status" %></th>
              <th>&nbsp</th>
            </tr>
          </thead>
          <tbody id="bills" class="product-index">
            <%= render "index" %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
<div id="product-modal" class="modal fade"></div>
<script>
  $("#tblBills").dataTable();
</script>
