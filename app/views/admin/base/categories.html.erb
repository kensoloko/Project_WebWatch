<% provide :title, t("admin.categories.headline") %>
<% provide :page_headline, t("admin.categories.headline") %>
<% provide :url, new_brand_path %>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <table id="tblCategories" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th><%= t "admin.id" %></th>
                <th><%= t "admin.categories.cName" %></th>
                <th><%= t "admin.categories.descript" %></th>
              </tr>

            </thead>
            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.id %></td>
                  <td><%= category.name %></td>
                  <td><%= category.description %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $("#tblCategories").dataTable();
</script>
