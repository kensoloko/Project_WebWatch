<% unless bill.status == 5 %>
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#collapse<%= bill.id %>">
            <%= t ".bill_id" %>: <%= bill.id %>
          </a>
           | <%= t ".created_at" %>: <%= bill.created_at.strftime "%d/%m/%Y" %>
           | <%= t ".status" %>: <%= t ".bill_status_#{bill.status}" %>
          <% if bill.status == 1 %>
            <%= link_to t(".cancel"), bills_destroy_path(bill),
              method: :delete, :data => {:confirm => "Are you sure?"},
              class: "text-right btn btn-danger" %>
          <% end %>
        </h4>
      </div>
      <div id="collapse<%= bill.id %>" class="panel-collapse collapse">
        <ul class="list-group">
          <li class="list-group-item">
            <div class="row">
              <div class="col-md-4">Product name</div>
              <div class="col-md-4">Price</div>
              <div class="col-md-4">Quantity</div>
            </div>
          </li>
          <% total_price = 0 %>
          <% bill.bill_details.each do |b| %>
            <% product = Product.find_by id: b.product_id %>
            <% total_price += product.price %>
            <li class="list-group-item">
              <div class="row">
                <div class="col-md-4"><%= product.name %></div>
                <div class="col-md-4"><%= product.price %> $</div>
                <div class="col-md-4"><%= b.quantity %></div>
              </div>
            </li>
          <% end %>
        </ul>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-4">Total</div>
            <div class="col-md-4"><%= total_price %> $</div>
            <div class="col-md-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
