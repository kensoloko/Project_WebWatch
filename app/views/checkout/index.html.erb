<% provide :title, t("Checkout") %>
<div class="ckeckout">
  <div class="container">
    <div class="ckeck-top heading">
      <h2><%= t ".checkout" %></h2>
    </div>
    <div class="ckeckout-top">
      <div class="cart-items">
        <h3><%= t ".my_shop_bag" %></h3>
        <div class="in-check" >
          <div class="simpleCart_items"></div>
          <div class="footerRow">
            <div class="item-1"><%= t ".total" %></div>
            <div class="item-2"></div>
            <div class="item-3"><div class="simpleCart_quantity"></div></div>
            <div class="item-4"><div class="simpleCart_total"></div></div>
          </div>
          <% if logged_in? %>
            <div class="row">
              <div class="col-md-4">
                <a href="javascript:;" class="my-btn simpleCart_checkout">
                  <%= t ".checkout" %>
                </a>
              </div>
            </div>
          <% else %>
            <a href="/signup" class="my-btn">
              <%= t ".signup_to_checkout" %>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
