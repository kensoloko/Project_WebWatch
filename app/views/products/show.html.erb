<%= javascript_include_tag "rating_star" %>
<%= stylesheet_link_tag "rating_star" %>
<div class="single contact">
  <div class="container">
    <div class="single-main">
      <div class="col-md-9 single-main-left">
      <div class="sngl-top">
        <div class="col-md-5 single-top-left">
          <div class="flexslider">
            <ul class="slides">
              <% JSON.parse(@product.image).each do |p| %>
              <li data-thumb="<%= p %>">
              <div class="thumb-image">
                  <%= image_tag p, alt: "",
                  class: "img-responsive", data: {imagezoom: true} %>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="col-md-7 single-top-right">
          <div class="single-para simpleCart_shelfItem">
            <div class="item_pid" style="display:none;"><%= @product.id %></div>
            <h2 class="item_name"><%= @product.name %></h2>
            <div class="star-on">
             <div id="pid"><%= @product.id %></div>
              <div class="rating-stars text-center">
                <ul id="stars">
                  <li class="star" title="Poor" data-value="1">
                    <i class="fa fa-star fa-fw"></i>
                  </li>
                  <li class="star" title="Fair" data-value="2">
                    <i class="fa fa-star fa-fw"></i>
                  </li>
                  <li class="star" title="Good" data-value="3">
                    <i class="fa fa-star fa-fw"></i>
                  </li>
                  <li class="star" title="Excellent" data-value="4">
                    <i class="fa fa-star fa-fw"></i>
                  </li>
                  <li class="star" title="WOW!!!" data-value="5">
                    <i class="fa fa-star fa-fw"></i>
                  </li>
                </ul>
              </div>
              <div class="clearfix"> </div>
              <div class= "rating_star"><%= t ".averate_rate" %>
                <%= @averate.round 1 %>
              </div>
            </div>
            <h5 class="item_price">
              <%= pluralize @product.price, "$", "$" %>
            </h5>
            <p><%= @product.description %></p>
            <ul class="tag-men">
              <li><span class="tag"><%= t ".category" %></span>
              <span><%= @category.name %></span></li>
              <li><span class="tag"><%= t ".brand" %></span>
              <span><%= @brand.name %></span></li>
            </ul>
            <%= link_to t(".add_to_cart"), "javascript:;",
             class: "add-cart item_add", onclick: t(".alert") %>
          </div>
        </div>
        <div class="clearfix"> </div>
      </div>
      <div class="tabs">
        <ul class="menu_drop">
          <li class="item1">
            <%= link_to "#" do %>
              <%= image_tag("arrow.png") %>
              <%= t ".content" %>
            <% end %>
            <ul>
              <li class="subitem1">
                <p><%= @product.content %></p>
              </li>
            </ul>
          </li>
          <li class="item2">
            <%= link_to "#" do %>
              <%= image_tag("arrow.png") %>
              <%=  t(".review") %> (<%= @comments.size %>)
            <% end %>
            <ul>
              <li class="subitem1">
                <% @comments.each do |c| %>
                  <div class="row">
                    <div class="col-md-3">
                      <b><%= User.find_by(id: c.user_id).name %></b>
                    </div>
                    <div class="col-md-9">
                      <%= c.content %>
                    </div>
                  </div>
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
      <%= render "lastproduct" %>
    </div>
    </div>
  </div>
</div>
